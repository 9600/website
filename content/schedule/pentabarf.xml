<%
# vim: set ts=2 sw=2 et ai ft=ruby:

conf = $item_by_id.fetch("/schedule/conference/")
days = @items.select{|i| i.identifier =~ %r{^/schedule/day/.+}}.sort_by{|d| d[:conference_day]}
rooms = @items.select{|i| i.identifier =~ %r{^/schedule/room/.+}}.sort_by{|r| [r[:rank], r[:conference_room_id]]}
events = @items.select{|i| i.identifier =~ %r{^/schedule/event/.+}}.sort_by{|e| e[:event_id]}

require 'builder'
buffer = ''
xml = Builder::XmlMarkup.new(:target => buffer, :indent => 2)

xml.instruct!
xml.schedule do
  xml.conference do
    xml.title conf[:title]
    xml.subtitle conf[:subtitle]
    xml.venue conf[:venue]
    xml.city conf[:city]
    xml.start days.first[:conference_day]
    xml.end days.last[:conference_day]
    xml.days days.length
    #xml.release $conf.release
    xml.day_change conf[:day_change]
    xml.timeslot_duration conf[:timeslot_duration]
  end
  days.each_with_index do | day, index |
    xml.day(:index=>index + 1,:date=>day[:conference_day]) do
      rooms.each do | room |

        xml.room({:name => room[:title]}) do
          room[:events_by_day][day[:slug].to_sym].map{|slug| $item_by_id.fetch("/schedule/event/#{slug}/")}.each do |event|
            xml.event(:id=>event[:event_id]) do
              xml.start event[:start_time]
              xml.duration Time.parse(event[:duration]).strftime('%H:%M')
              xml.room event[:room_name]
              xml.slug event[:slug]
              xml.title event[:title]
              xml.subtitle event[:subtitle]
              xml.track event[:conference_track]
              xml.type event[:type]
              xml.language event[:language]
              xml.abstract event[:abstract]
              xml.description event[:description]
              xml.persons do
                event[:speakers].map{|slug| $item_by_id.fetch("/schedule/speaker/#{slug}/")}.each do |speaker|
                  xml.person( speaker[:name], {:id=>speaker[:person_id]} )
                end
              end
              xml.links do
                event[:links].each do |link|
                  xml.link(link[:title], {:href=>link[:url]})
                end
              end
            end
          end

        end
      end
    end
  end

end
%><%= buffer %>
